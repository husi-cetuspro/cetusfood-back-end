datasource db {
    provider = "sqlite"
    url = "file:./cetusfood.db"
}

generator client {
    provider = "prisma-client-js"
}

model Restaurant {
    id Int @default(autoincrement()) @id
    name String @unique
    email String @unique
    url String? @unique
    logoUrl String?
    products Product[] 
}

model Order {
    id Int @default(autoincrement()) @id
    accountId Int
    restaurantId Int
    items OrderItem[]
    account Account @relation(fields: [accountId], references: [id])
}

model OrderItem {
    id Int @default(autoincrement()) @id
    orderId Int
    productId Int
    count Int
    order Order @relation(fields: [orderId], references: [id])
}

model Product {
    id Int @default(autoincrement()) @id
    name String
    price Float
    restaurantId Int
    logoUrl String 
    restaurant Restaurant @relation(fields: [restaurantId], references: [id])
}

model Account {
    id Int @default(autoincrement()) @id
    email String @unique
    password String
    isVerified Boolean @default(false)
    verificationCode String @unique
    role String
    orders Order[]
}

model UserLogins {
    id Int @default(autoincrement()) @id
    accountId Int
    refreshToken String @unique
    expires DateTime
    role String @default("user")
    createdAt DateTime @default(now())
}